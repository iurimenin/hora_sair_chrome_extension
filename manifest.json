{
  "name": "Sorteador Diária - ProductLabs",
  "version": "1.0",
  "description": "Extensão para sortear o próximo facilitar e secretário da diária",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/favicon-16x16.png",
      "32": "images/favicon-32x32.png",
      "48": "images/favicon-48x48.png",
      "120": "images/favicon-120x120.png"
    }
  },
  "icons": {
    "16": "images/favicon-16x16.png",
    "32": "images/favicon-32x32.png",
    "48": "images/favicon-48x48.png",
    "120": "images/favicon-120x120.png"
  },
  "manifest_version": 2
}